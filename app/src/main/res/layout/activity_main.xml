<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_red_dark"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.godsendapp.www.godsendapp.MainActivity">

    <Button
        android:text="Items"
        android:layout_width="122dp"
        android:layout_height="60dp"
        android:id="@+id/item_button"
        android:gravity="bottom|center"
        android:background="@android:color/white"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="normal|bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="18sp" />

    <ImageButton
        android:src="@drawable/settings_image"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/settings_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Messages"
        android:layout_width="122dp"
        android:layout_height="60dp"
        android:id="@+id/message_button"
        android:gravity="bottom|center"
        android:background="@android:color/holo_red_dark"
        android:textColor="@android:color/white"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/item_button"
        android:layout_toEndOf="@+id/item_button" />

    <ImageView
        android:src="@drawable/item_image"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/item_image"
        android:layout_marginRight="43dp"
        android:layout_marginEnd="43dp"
        android:layout_alignTop="@+id/item_button"
        android:layout_toLeftOf="@+id/message_button"
        android:layout_toStartOf="@+id/message_button" />

    <Button
        android:text="Balance"
        android:layout_width="122dp"
        android:layout_height="60dp"
        android:id="@+id/balance_button"
        android:gravity="bottom|center"
        android:background="@android:color/holo_red_dark"
        android:textColor="@android:color/white"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:src="@drawable/message_image"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/message_image"
        android:layout_alignTop="@+id/message_button"
        android:layout_toLeftOf="@+id/balance_button"
        android:layout_toStartOf="@+id/balance_button"
        android:layout_marginRight="26dp"
        android:layout_marginEnd="26dp" />

    <ImageView
        android:src="@drawable/balance_image"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/balance_image"
        android:layout_alignTop="@+id/balance_button"
        android:layout_toLeftOf="@+id/settings_button"
        android:layout_toStartOf="@+id/settings_button"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp" />

    <ImageView
        android:src="@drawable/home_image"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/home_button"
        android:layout_toLeftOf="@+id/home_button"
        android:layout_toStartOf="@+id/home_button"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp"
        android:id="@+id/imageView4" />

    <Button
        android:text="Home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home_button"
        android:textStyle="normal|bold"
        android:background="@android:color/holo_red_dark"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/message_button"
        android:layout_toStartOf="@+id/message_button" />

</RelativeLayout>
